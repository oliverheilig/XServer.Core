<Window Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PtvDeveloperTest"
        xmlns:Map="clr-namespace:Ptv.XServer.Controls.Map;assembly=Ptv.XServer.Controls.Map" x:Class="PtvDeveloperTest.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="709" Width="1112">
    <Grid>
        <Map:WpfMap x:Name="Map" />

        <ComboBox  VerticalAlignment="Bottom" Background="LightGray" HorizontalAlignment="Left" Margin="8,0,0,38" Name="MapStyleComboBox" SelectionChanged="MapStyleComboBox_SelectionChanged" >
            <ComboBoxItem Content="Road" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="Satellite"></ComboBoxItem>
            <ComboBoxItem Content="Hybrid"></ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
