        <Ellipse.Fill>
          <RadialGradientBrush RadiusX="0.621" RadiusY="0.621">
            <GradientStop Color="Black" Offset="0.502" />
            <GradientStop Color="#FFA7A59C" Offset="0.986" />
            <GradientStop Color="#FF565550" Offset="0.598" />
