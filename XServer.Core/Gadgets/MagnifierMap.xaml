        <EllipseGeometry Center="{Binding ElementName=Magnifier, Path=MagnifierCenter}" RadiusX="{Binding ElementName=Magnifier, Path=MagnifierRadius}" RadiusY="{Binding ElementName=Magnifier, Path=MagnifierRadius}" />
