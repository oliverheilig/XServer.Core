<local:MapGadget x:Class="Ptv.XServer.Controls.Map.Gadgets.DimmerGadget"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ptv.XServer.Controls.Map.Gadgets" 
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 x:Name="Dimmer">
  <Grid>
    <Border CornerRadius="8" BorderThickness="0" BorderBrush="Transparent">
      <Slider Name="dimmSlider" Width="80" Margin="2,2,2,2" MouseRightButtonDown="dimmSlider_MouseRightButtonDown" ValueChanged="dimmSlider_ValueChanged" Maximum="100" Minimum="-100" LargeChange="10" SmallChange="1" />
    </Border>
  </Grid>
</local:MapGadget>
