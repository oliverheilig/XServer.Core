<local:MapGadget x:Class="Ptv.XServer.Controls.Map.Gadgets.CoordinatesGadget"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:local="clr-namespace:Ptv.XServer.Controls.Map.Gadgets"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 x:Name="Coordinates"
                 Margin="3">
  <Grid IsHitTestVisible="False">
    <Border CornerRadius="5" BorderThickness="2">
      <TextBlock Loaded="CoordinatesText_Loaded" Padding="4,1,4,1" x:FieldModifier="public" x:Name="CoordinatesText" FontSize="10" TextAlignment="Center" />
    </Border>
  </Grid>
</local:MapGadget>
